#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# Define the package name
PACKAGE_NAME := alsa-ucm-conf-cros

# Main target - build the package
%:
	dh $@

# Main target - install the package
override_dh_auto_install:
	dh_installdirs

	mkdir -p debian/$(PACKAGE_NAME)/usr/share/alsa
	# Copy the ucm2 folder from the source directory to /usr/share/alsa
	cp -r ucm2 debian/$(PACKAGE_NAME)/usr/share/alsa

# Indicate that these targets are not files
.PHONY: override_dh_auto_install
